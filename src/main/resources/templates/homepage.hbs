{{#partial "pagename"}}
    {{username}}, here you can enter any new animal sightings
{{/partial}}

{{#partial "content"}}
    <small style="padding:8px; border-bottom:2px solid teal"> Add an animal below: </small>

    <br><hr>
        <form action="/animals" method="post">

            <div class="form-group">
                <label for="species"> Animal Species: </label>
                <select id="species" name="species" required style="width:50%; border:2px solid black; border-radius:10px; padding:7px; margin:10px">
                    <option value=""></option>
                    <option value="Lion">Lion</option>
                    <option value="Gazelle">Gazelle</option>
                    <option value="Zebra">Zebra</option>
                    <option value="Giraffe">Giraffe</option>
                </select>
            </div>

            <div class="form-group">
                <label for="age"> Age: </label>
                <input id="age" name="age" required placeholder="Between 1 - 10" style="width:50%; border:2px solid black; border-radius:10px; padding:7px; margin:10px">
            </div>

            <div class="form-group">
                <label for="location"> Sighting location: </label>
                <select id="location" name="location" required style="width:50%; border:2px solid black; border-radius:10px; padding:7px; margin:10px">
                    {{#if locations}}
                        {{#each locations}}
                            <option value=""></option>
                            <option value="{{name}}">{{name}}, <small>{{area}}</small></option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>

            <div class="form-group">
                <label for="rangerId"> Ranger Id: </label>
                    {{#if rangers}}
                    <select id="rangerId" name="rangerId" style="width:50%; border:2px solid black; border-radius:10px; padding:7px; margin:10px">
                        {{#each rangers}}
                            <option value=""></option>
                            <option value="{{id}}">{{name}}, <small>{{rank}}</small></option>
                        {{/each}}
                    </select>
                        <br>
                        <small> <br>Can't see your ranger? <br>
                            <a href="rangers/new">Add a new ranger...</a></small>
                    {{else}}
                        <small>No rangers available.</small>
                        <a href="rangers/new">Add a new ranger...</a>
                    {{/if}}
            </div>

            <button type="submit" class="btn btn-default">Save Sighting</button>
        </form>
